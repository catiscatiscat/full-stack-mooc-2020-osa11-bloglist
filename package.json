{
  "name": "full-stack-mooc-2020-osa11-bloglist",
  "version": "0.0.1",
  "description": "osa11 bloglist BE FE",
  "main": "server/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server/index.js",
    "start-prod": "node server/index.js",
    "dev": "cross-env NODE_ENV=development nodemon server/index.js",
    "start:test": "cross-env NODE_ENV=test node server/index.js",
    "client": "npm run start --prefix client",
    "build": "npm run build --prefix client",
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "cypress:open": "cypress open",
    "test:e2e": "cypress run"
  },
  "author": "Iko HyppÃ¤nen",
  "license": "MIT",
  "dependencies": {
    "axios": ">=0.21.2",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongoose": "^6.4.6",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "prop-types": "^15.7.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.12.17",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "cross-env": "^7.0.2",
    "cypress": "^9.6.1",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-react": "^7.30.0",
    "nodemon": "^2.0.4",
    "supertest": "^5.0.0"
  },
  "jest": {
    "projects": [
      {
        "displayName": "backend",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/server/tests//*.test.js"
        ]
      },
      {
        "displayName": "frontend",
        "testEnvironment": "jsdom",
        "testMatch": [
          "<rootDir>/client/src/**/*.test.js"
        ]
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
